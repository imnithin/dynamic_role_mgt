<h1>Listing nodes</h1>

<table>
  <tr>
    <th>Node Name</th>
    <th>Flow Name</th>
    <th>Duration</th>
    <th>Node Type</th>
    <th>Role</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @nodes.each do |node| %>
  <tr>
    <td><%= node.name %></td>
    <td><%= node.flow.name %></td>
    <td><%= node.duration %></td>
    <td><%= node.node_type %></td>
    <td><%= node.role.name %></td>
    <td><%= link_to 'Show', node %></td>
    <td><%= link_to 'Edit', edit_node_path(node) %></td>
    <td><%= link_to 'Destroy', node, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

