<div class="main_layout forget_password">
  <div class="main_layout_inner">
    <div class="signin_wrap">
      <p><%= image_tag "/assets/logo.png", alt: "logo"  %></p>
      <h2>Change your password</h2>
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%#= devise_error_messages! %>
      <%= f.hidden_field :reset_password_token %>
      <div class="signin_box">
        <div class="signin_txtbox">
          <%= f.password_field :password, autofocus: true, autocomplete: "off", class: "txtbox_field field_email", placeholder: "New Password" %>
        </div>
        <div class="signin_txtbox">
          <%= f.password_field :password_confirmation, autocomplete: "off", class: "txtbox_field", placeholder: "Confirm Password" %>
        </div>
        <div class="signin_txtbox signin_btn">
          <%= f.submit "Reset Password", class: "txtbox_field" %>
        </div>
      </div>
      <% end %>
    </div>
  </div>

  <div class="footer_layout">
    <div class="footer_layout_inner">
      <span class="copyrights">&copy; Copyright 2014, GrupOfis.  All Rights Reserved.</span>
      <span class="poweredBy">
        <p>Powered by</p>
        <p><%= image_tag "/assets/cc_icon.png", alt: "color-cuboid"  %></p>
        <p><%= link_to "ColorCuboid Designs", "http://colorcuboid.com/", target: true  %></p>
      </span>
    </div>
  </div>
  
</div>

<script type="text/javascript">
  $("#new_user").validate({
    rules:{
      'user[password]':
      {
        required: true,
        minlength: 8
      },
      'user[password_confirmation]':
      {
        required: true,
        equalTo: "#user_password"
      }
    },
    messages: {
      'user[password]':
      {
        required:"Please enter password",
        minlength: "Password should be mininum 8 letters"
      },
      'user[password_confirmation]':
      {
        required:"Please enter correct password"
      }
    }
  });
</script>